<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context="com.mualab.org.user.activity.booking.WorkingHourActivity">

    <include
        android:id="@+id/header"
        layout="@layout/new_header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Monday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_monday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Tuesday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Wednesday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Thursday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_thursday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Friday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_friday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Saturday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_saturday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Sunday"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/tv_close_sunday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="Close"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray2"/>


        </LinearLayout>

    </ScrollView>





</RelativeLayout>
