<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="4dp"
    android:background="@color/white"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:background="@drawable/gradient_circle_img"
                android:src="@drawable/default_placeholder"
                app:civ_border_color="@color/transparent"
                app:civ_border_width="2dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextView"
                        android:maxLines="1"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_gravity="center"
                        android:text="Dharmraj Acharya"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_comments_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="6 minute ago"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/gray"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextView"
                    android:textColor="@color/mcam_color_dark"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Anil chourasiya"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.mualab.org.user.Views.cv.AspectRatioImageView
                        android:id="@+id/ivImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerCrop"
                        app:ari_aspect="height"
                        app:ari_ratio="0.75"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-1.5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/inactive_like_ico" />

                        <TextView
                            android:id="@+id/tv_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            style="@style/TextView"
                            android:textSize="12sp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="6 Likes"
                            android:textColor="@color/gray" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height=".8dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray2"/>

    </LinearLayout>



</RelativeLayout>
