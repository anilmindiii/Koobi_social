<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/service_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:visibility="gone">

        <View
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_green_solid_background"
            android:backgroundTint="@color/gray" />

        <TextView
            android:id="@+id/tv_inoutcall_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:text="text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray2" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_arrow_angle"
            android:layout_centerVertical="true"
            android:tint="@color/gray" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ly_booking_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:gravity="center|left"
            android:visibility="visible">

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:text="Color Hair Black" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_name"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="10dp"
                android:text="Color Hair Black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/gray2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:text="Â£15" />

    </RelativeLayout>


</RelativeLayout>